---
import { Picture } from "astro:assets";

const { imgSrc, imgAlt } = Astro.props;
---
<figure class="blog lightgradient">
    <Picture src={imgSrc} alt={imgAlt} layout="constrained" width="{400}" height="{200}" loading="lazy" class="blogimg"/>
    <figcaption class="blog"><slot/></figcaption>
</figure>